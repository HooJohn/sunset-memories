{
  "name": "sunset-memories",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for the Sunset Memories application",
  "main": "index.js",
  "scripts": {
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "dev": "npm-run-all --parallel dev:client dev:server",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "build": "npm-run-all --parallel build:client build:server",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "install:client": "pnpm --filter client install",
    "install:server": "pnpm --filter server install",
    "postinstall": "pnpm install:client && pnpm install:server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "monorepo",
    "pnpm",
    "react",
    "nestjs",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0",
    "npm-run-all": "^4.1.5"
  }
}
