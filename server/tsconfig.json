{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false, // Often set to true in new projects for better safety
    "noImplicitAny": false,   // Often set to true
    "strictBindCallApply": false, // Often set to true
    "forceConsistentCasingInFileNames": false, // Often set to true
    "noFallthroughCasesInSwitch": false, // Often set to true
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
